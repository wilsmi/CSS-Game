{
    "version": "0.2.0",
    "configurations": [{
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Launch index.html (no sourcemaps)",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": false,
            "file": "${workspaceRoot}/index.html"
        },
        /* {
             "type": "chrome",
             "request": "attach",
             "name": "Attach Chrome",
             "port": 8080,
             "webRoot": "${workspaceRoot}"
         }*/
    ]
}